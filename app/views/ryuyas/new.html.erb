<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @ryuya do |f| %>

  <div class="field">
    <%= f.label :hobby_name %>
    <%= f.text_field :hobby_name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.select :genre, 
    [["スポーツ", "スポーツ"], 
    ["インドア", "インドア"], 
    ["アウトドア", "アウトドア"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, :size => 10 %>
  </div>

  <div class="field">
    <%= f.label :about %>
    <%= f.text_area :about, :size => "30x2" %>
  </div>

<div class="field">
<%= f.label :spot %>
<%= f.text_field :spot, :size => 30 %>
</div>

<div class="field">
<%= f.label :image %>
<%= f.file_field :image %>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", ryuyas_path %>

<%= stylesheet_link_tag 'new', :media => "all" %>

<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for(@ryuya, :url => { controller:'ryuyas', action:'create'})do |f| %>
    <%= f.label :投稿内容 %>
    <%= f.submit "送信"%>
    <br>
    <% end %>
</div>